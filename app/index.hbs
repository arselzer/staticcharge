<!doctype html>

<html ng-app="chemistryAB">
  <head>
    <title>{{title}}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Alexander Selzer">
    <link href='http://fonts.googleapis.com/css?family=Lato:400,300italic|Open+Sans:600italic|Bitter|Arvo:400italic|Raleway' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="css/main.css" />
    <link rel="stylesheet" href="css/bibliography.css" />
    {{#unless print}}<link rel="stylesheet" href="bower_components/onepage-scroll/onepage-scroll.css" />{{/unless}}
    {{#if print}}<link rel="stylesheet" href="css/print.css" />{{/if}}
    <script defer src="bower_components/jquery/jquery.min.js"></script>
    {{#unless print}}<script defer src="bower_components/onepage-scroll/jquery.onepage-scroll.js"></script>{{/unless}}
    {{#unless print}}<script defer src="js/app.js"></script>{{/unless}}
  </head>

  <body>
    {{#if print}}
      <div class="switch-button to-scroll"><a href="index.html">Scroll Page</a></div>
    {{else}}
      <div class="switch-button to-print"><a href="print.html">Print Page</a></div>
    {{/if}}
      <div class="document">
        {{#if titlePage}}
          <section class="titlepage">
            <div class="container">
            {{{titlePage}}}
            </div>
          </section>
        {{/if}}
        {{#if contentsPage}}
          <section class="table-of-contents">
            <div class="container">
            {{{contentsPage}}}
            </div>
            {{#if ../print}} <hr> {{/if}}
          </section>
        {{/if}}
        {{#each markdown}}
          <section class="page">
            <div class="container">
              {{{this}}}
            </div>
          {{#if ../print}} <hr> {{/if}}
          </section>
        {{/each}}
        {{#if bibliography}}
          <section class="bibliography">
            <div class="container">
              <span class="title">Bibliography</span>
  						<div class="references">
                {{#each bibliography}}
    						<li class="reference">
                  {{#if this.author}}<span>{{this.author}}</span>{{/if}}
      						<span>{{this.title}}</span>
                  {{#if this.organization}}<span>{{this.organization}}</span>{{/if}}
                  {{#if this.lastModDate}}<span>{{this.lastModDate}}</span>{{/if}}
      						<span>{{this.type}}</span>
                  {{#if this.accessDate}}<span>{{this.accessDate}}</span>{{/if}}
      						<span>{{this.url}}</span>
    						</li>
                {{/each}}
  						</div>
            </div>
          </section>
        {{/if}}
      </div>
  </body>
</html>
